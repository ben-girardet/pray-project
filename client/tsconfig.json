{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "rootDir": "src",
    "target": "ES2017",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "shared/*": [
        "../shared/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "files": [
    "src/resource.d.ts"
  ]
}