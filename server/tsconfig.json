{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strictPropertyInitialization": false,
        "target": "ES2019",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDirs": [
            "./src",
            "../shared"
        ],
        "strict": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "baseUrl": "./",
        "paths": {
            "shared/*": ["../shared/*"]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "test"
    ]
}
