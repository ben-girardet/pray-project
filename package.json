{
  "name": "pray-project",
  "version": "1.0.0",
  "description": "Client and server for the Prayer App",
  "scripts": {
    "start": "run-p start:server start:client",
    "start:server": "cd server && npm run start",
    "start:client": "cd client && npm run start",
    "postinstall": "run-p postinstall:server postinstall:client",
    "postinstall:server": "cd server && npm install",
    "postinstall:client": "cd client && npm install",
    "docs": "docsify serve ./docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ben-girardet/prayer-project.git"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "keywords": [],
